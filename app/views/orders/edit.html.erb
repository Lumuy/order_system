<div class="min-h-screen p-5">
   <h2 class='text-2xl font-bold text-center'>Edit order</h2>
   <%= form_with scope: :order, url: order_path(@order), method: :patch, class: 'bg-white p-4 mt-4 flex justify-between' do |f| %>
      <label class='block'>
         <span class='mr-5'>Order Status</span>
         <%= f.select :status, ['prepare', 'processing', 'done'],
            class: 'block w-full mt-1 rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0' %>
      </label>

      <%= f.submit "Update", class: "px-4 py-2 rounded text-white inline-block shadow-lg bg-blue-500 hover:bg-blue-600 focus:bg-blue-700" %>
   <% end %>
</div>
