<div class="flex items-center justify-center mt-10">
  <div class="w-full max-w-md">
    <%= form_tag sessions_path, class: 'bg-white shadown-lg rounded px-12 pt-6 pb-8 mb-8' do %>
      <!-- @csrf -->
      <div
        class="text-gray-800 text-2xl flex justify-center border-b-2 py-2 mb-4"
      >
        Admin Login
      </div>
      <div class="mb-4">
        <label
          class="block text-gray-700 text-sm font-normal mb-2"
          for="username"
        >
          Email
        </label>
        <%= email_field_tag :email, params[:email],
          placeholder: 'Email',
          class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-6">
        <label
          class="block text-gray-700 text-sm font-normal mb-2"
          for="password"
        >
          Password
        </label>
        <%= password_field_tag :password, nil, placeholder: 'Password',
          class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="flex items-center justify-between">
        <%= submit_tag "Login", class: "px-4 py-2 rounded text-white inline-block shadow-lg bg-blue-500 hover:bg-blue-600 focus:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>

