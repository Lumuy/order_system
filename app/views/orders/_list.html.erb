<table class="min-w-full leading-normal">
   <thead>
      <tr>
         <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-center text-xs font-semibold text-gray-600 tracking-wider">
            OrderId
         </th>
         <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-center text-xs font-semibold text-gray-600 tracking-wider">
            User Email
         </th>
         <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-center text-xs font-semibold text-gray-600 tracking-wider">
            Status
         </th>
         <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-center text-xs font-semibold text-gray-600 tracking-wider">
            Edit
         </th>
      </tr>
   </thead>
   <tbody>
     <% @orders.each do |order| %>
       <tr>
          <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
            <p class="text-gray-900 whitespace-no-wrap text-center"><%= order.id %></p>
          </td>
          <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
            <p class="text-gray-900 whitespace-no-wrap text-center"><%= order.user.email %></p>
          </td>
          <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
            <p class="text-gray-900 whitespace-no-wrap text-center"><%= order.status %></p>
          </td>
          <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm flex justify-center">
            <%= link_to 'edit', edit_order_path(order),
               class: 'text-blue-600 hover:text-blue-900 whitespace-no-wrap' %>
          </td>
       </tr>
     <% end %>
   </tbody>
</table>

